<h3> Bet # <%= @bet.id %></h3>

Matchup: <%= display_matchup(@bet.game) %>
Date: <%= format_date(@bet.game.date) %> at <%= @bet.game.time %><br />
Bet Status: <%= @bet.status %><br />
Bet Amount: $ <%= @bet.amount %><br />

<%= @bet.players.first.user.username %>'s Pick:
<%= display_pick(@bet.players.first, @bet.game) %>      
<%= display_handicap(@bet.players.first) %>
<% if @bet.players.count == 2 %>
  <%= @bet.players.last.user.username %>'s pick: <%= display_pick(@bet.players.last, @bet.game) %>
  <%= display_handicap(@bet.players.last) %>
<% end %>
<% if @bet.game.margin.nil? %> 
  Bet outcome pending game completion<br />
<% else %>
  <%= display_winning_better(@bet) %>
<% end %>

<h4>Comments</h4>
<ul>
  <% @bet.comments.each do |comment| %>
    <li> <%= comment.user.username %>: <%= comment.content %></li>
  <% end %>
</ul>
  
<%= render partial: "shared/comment", locals: {bet: @bet} %>