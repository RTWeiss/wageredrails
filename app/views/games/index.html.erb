<% provide(:title, 'Games Index') %>

<div class="ui centered page grid">
  <div class="fourteen wide column">
    <h2 class="ui header">Games Index </h2>
    <% @games.each do |game| %>
      <div class="ui center aligned segment">
        <h4 class="ui header"><%= game.away_team %> at <%= game.home_team %>
          <div class="sub header">
            <a href="/games/<%= game.id %>"><%= format_date(game.date) %> at <%= game.time %></a>
          </div>
        </h4>
        <div class="ui floating dropdown labeled search teal icon button">
          <i class="search icon"></i>
          <span class="text">Search for User</span>
          <div class="menu">
            <div class="header">
              <i class="dollar icon"></i>
              Make a bet
            </div>
            <div class="divider"></div>
            <% @users.each do |user| %>
              <% if user.id == current_user.id %>
              <% else %>
                <div class="item">
                 <a href="/users/<%= user.id %>/games/<%= game.id %>/bets/new"><%= user.username %></a>
               </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
    <script type="text/javascript">
      $(document)
        .ready(function(){
          $('.ui.labeled.icon.button')
            .dropdown()
          ;
        })
      ;
    </script>
  </div>
</div>
