<% provide(:title, 'Users index') %>
<h1> All Users </h1>

<%= will_paginate %>
<ul>
  <% @users.each do |user| %>
  	<li>
  	  <%= link_to user.username, user %>
  	  <% if current_user.admin? && !current_user?(user) %>
  	    <%= link_to "delete", user, method: :delete, data: { confirm: "You sure" } %>
  	  <% end %>
  	</li>
  <% end %>
</ul>

<%= will_paginate %>