<div class="ui centered page grid">
  <div class="twelve wide column">
    <h3 class="ui header">Forgot your password?</h3>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => "ui form segment" }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: "ui blue button" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
